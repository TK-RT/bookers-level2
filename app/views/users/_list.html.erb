<h1>User info</h1>

	<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
	<table class="table table">
			<tr>
				<th>name</th><th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th><th><%= user.introduction %></th>
			</tr>
	</table>

	
	<%= link_to "", edit_user_path(user.id), class: "glyphicon glyphicon-wrench  btn btn-default btn-block " %>

<h1>New book</h1>

<%= form_for(book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title, class: "col-xs-12" %>

<h4>Opinion</h4>
<%= f.text_area :body, class: "col-xs-12 new-col" %><br>

<%= f.submit "Create Book", class: "btn btn-primary btn-block" %>

<% end %>